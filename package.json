{
  "name": "cgx",
  "version": "1.2.2",
  "description": "Generate all the recommended files (pre-filled) for the Github and Gitlab community standards",
  "author": "Jeroen Ouwehand",
  "repository": "https://github.com/jeroenouw/cgx",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "cgx": "bin/cgx"
  },
  "keywords": [
    "cli",
    "cgx",
    "community",
    "typescript",
    "javascript",
    "nodejs"
  ],
  "scripts": {
    "start": "npm run build && npm run global",
    "build": "tsc -p .",
    "global": "npm i -g && cgx",
    "clean": "rm -rf ./node_modules ./package-lock.json ./lib ./docs ./coverage .nyc_output",
    "refresh": "npm run clean && npm install",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src",
    "test": "npm run build && ENV=TEST nyc mocha ./lib/**/*.test.js --exit"
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.5",
    "commander": "^2.20.0",
    "figlet": "^1.2.1",
    "fs-extra": "^8.0.0",
    "inquirer": "^6.3.1",
    "inversify": "^5.0.1",
    "kleur": "^3.0.3",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@liftr/tscov": "^1.4.1",
    "@types/chai": "^4.1.7",
    "@types/inquirer": "^6.0.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.0",
    "@types/sinon": "^7.0.12",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  }
}
