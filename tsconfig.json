{
  "compilerOptions": {
    "target": "es5",           
    "module": "commonjs",                 
    "lib": ["es6", "es2015", "dom"], 
    "declaration": true,     
    "experimentalDecorators": true,
    "outDir": "lib",         
    "rootDir": "src",       
    "strict": true,        
    "types": [
      "node", 
      "chai", 
      "mocha", 
      "sinon",
      "inquirer"
    ],
    "esModuleInterop": true,   
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules", 
    "lib", 
    "*.spec.ts"]
}